    <form action="/applications" method="POST">
 
        <div class="row mb-3">
            <label for="name" class="col-sm-2 col-form-label" aria-placeholder="test">Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
          </div>

          <div class="row mb-3">
            <label for="company" class="col-sm-2 col-form-label">Hiring Company</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="company" name="company"   required>
            </div>
          </div>

          <div class="row mb-3">
            <label for="role" class="col-sm-2 col-form-label"> </label>
            <div class="col">
              <input type="text" id="role" class="form-control" placeholder="Role" aria-label="First name" name="role" required>
            </div>

            <div class="col">

            <select class="form-select" aria-label="Default select example" id="industry" name="industry" required>
                      <!-- Placeholder option -->
        <option value="" disabled selected>Choose industry</option>

                <% industries.forEach(function(industry) { %>
                    <option value="<%= industry %>"><%= industry %></option>
                <% }); %>
              
            </select>
            </div>

            <div class="col">
                <select class="form-select" aria-label="Default select example" id="source" name="source" required>
                    <option value="" disabled selected>Choose source</option>
                    <% sources.forEach(function(source) { %>
                        <option value="<%= source %>"><%= source %></option>
                    <% }); %>
                </select>
            </div>



          </div>

        <div class="row mb-3">
            <label for="status" class="col-sm-2 col-form-label">Status</label>
            <div class="col-sm-10">
                <select class="form-select" aria-label="Default select example" id="status" name="status" required>
                    <option value="Ongoing">Ongoing</option>
                    <option value="Rejected">Rejected</option>
                    <option value="Accepted">Accepted</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
          <div class="col-sm-10 offset-sm-2">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="applied" name="applied" >
              <label class="form-check-label" for="gridCheck1">
                Applied?
              </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="firstInterview" name="firstInterview" >
                <label class="form-check-label" for="gridCheck2">
                  First Interview?
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="secondInterview" name="secondInterview" >
                <label class="form-check-label" for="gridCheck3">
                  Second Interview?
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="finalInterview" name="finalInterview">
                <label class="form-check-label" for="gridCheck4">
                  Final Interview?
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="offer" name="offer" >
                <label class="form-check-label" for="gridCheck5">
                  Offer?
                </label>
              </div>
          </div>
        </div>

        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Notes</label>
            <div class="col-sm-10">
              <textarea class="form-control" placeholder="Leave a comment here" id="notes" name="notes" style="height: 100px"></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary" >Submit</button>
  
